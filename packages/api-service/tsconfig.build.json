{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["bun-types"],
    "paths": {
      "/*": ["./*"]
    },
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "app.ts",
    "context/**/*",
    "plugins/**/*",
    "routes/**/*",
    "tools/**/*",
    "server/**/*"
  ]
}
